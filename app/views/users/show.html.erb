<div class="container-fluid">
  <div class="jumbotron bg-white mt-3 mb-3 p-3">
    <div class="row m-2">
      <div class="col-xs col-md-7 user-pretty-border mb-2 mb-md-0">
        <div class="row p-3">
          <div class="col-2 p-0">
            <%= image_tag 'users/photo.png', class: 'mr-3 img-fluid'%>
          </div>
          <div class="col-10">
            <h6 class="mt-0 font-weight-bold text-uppercase text-dark">Description :</h6>
            <p class="text-wrap text-justify text-dark"><%= @user.description %></p>
          </div>
        </div>
      </div>
      <div class="col-xs col-md-5 align-self-center pr-md-0">
        <div class="card bg-info text-dark">
          <div class="card-header font-weight-bold">
            Personel informations
          </div>
          <div class="card-body d-flex flex-column justify-content-between">
            <p class="card-text text-uppercase font-weight-bold"><%= @user.first_name %></p>
            <p class="card-text text-uppercase font-weight-bold"><%= @user.last_name %></p>
            <p class="card-text"><span class="font-weight-bold">Email : </span><%= @user.email %></p>
            <div class="d-flex flex-row justify-content-between align-items-center">
              <%= link_to 'Edit email and password', edit_user_registration_path, class: 'btn btn-success btn-sm', style: 'text-decoration: none' %>
              <%= link_to 'Edit other informations', edit_user_path(@user.id), class: 'btn btn-primary btn-sm', style: 'text-decoration: none' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div>
    <% if @user.events.count != 0 %>
      <div class="card">
        <div class="card-header alert alert-info h6 mb-0">
          These are all the events that you are scheduled :
        </div>
        <ul class="list-group list-group-flush">
          <% @user.events.each do |event| %>
            <li class="box-shadow list-group-item pt-0 pb-2 d-flex flex-row justify-content-between align-items-center bg-white">
              <div class="mt-3">
                <p class="text-card text-dark"><%= event.title %></p>
                <%= link_to 'Show event details', event_path(event.id), class: 'btn btn-warning btn-sm' %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>